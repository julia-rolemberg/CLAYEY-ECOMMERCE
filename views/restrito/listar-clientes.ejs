<h1 class="tituloR">Clientes</h1>

<div class="tabela">
    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">id</th>
                <th scope="col">Nome</th>
                <th scope="col">E-mail</th>
                <th scope="col">CEP</th>
                <th scope="col">Número da casa</th>
                <th scope="col">Cidade</th>
                <th scope="col"></th>
            </tr>
        </thead>

        <tbody>
            <!-- Construção dos itens da tabela -->
            <% for (let i = 0; i < lista.length; i++) { %>
                <tr>
                    <th scope="row"><%=lista[i].id_cliente%></th>
                    <td><%=lista[i].nome_cliente%></td>
                    <td><%=lista[i].email%></td>
                    <td><%=lista[i].cep_cliente%></td>
                    <td><%=lista[i].num_casa%></td>
                    <td><%=lista[i].cidade_cliente%></td>
                    <td>
                        <a href="" class="btn btn-primary"><i class="ires fa fa-cog"></i></a>
                        <a class="btn btn-danger" href=""><i class="ires fa fa-times"></i></a>
                    </td>
                </tr>
            <% } %>
            
        </tbody>
    </table>
</div>